@page "/test/numbers"

<style>
    th, td {
        padding: 0.5rem;
    }
</style>

<h1>Numbers</h1>

<table>
    <tr>
        <td>Text</td>
        <td><input @bind="Text" /></td>
    </tr>
    <tr>
        <td>Is integer: </td>
        <td>@Andes.NumberHelpers.IsInteger(Text)</td>
    </tr>
    <tr>
        <td>Is real: </td>
        <td>@Andes.NumberHelpers.IsReal(Text)</td>
    </tr>
    <tr>
        <td>Is Imaginary: </td>
        <td>@Andes.NumberHelpers.isImaginary(Text)</td>
    </tr>
    <tr>
        <td>Is complex: </td>
        <td>@Andes.NumberHelpers.IsComplex(Text)</td>
    </tr>
    <tr>
        <td>Is fraction: </td>
        <td>@Andes.NumberHelpers.IsFraction(Text)</td>
    </tr>
    <tr>
        <td>Parsed value: </td>
        <td>@Andes.Number.TryParse(Text)</td>
    </tr>
</table> 

@code {
    private string? Text { get; set; }
}