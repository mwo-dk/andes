@inherits Fluxor.Blazor.Web.Components.FluxorComponent

<FluentDialogBody>
    <table>
        <tr>
            <td>Steps:</td>
            <td>@Content.Steps</td>
        </tr>

        <tr>
            <td>Explicit:</td>
            <td>
                @if (Content.IsExplicit)
                {
                    <FluentIcon Value="@(new Icons.Regular.Size24.CheckboxChecked())" />
                }
                else
                {
                    <FluentIcon Value="@(new Icons.Regular.Size24.CheckboxUnchecked())" />
                }
            </td>
        </tr>
        <tr>
            <td>Embedded:</td>
            <td>
                @if (Content.IsEmbedded)
                {
                    <FluentIcon Value="@(new Icons.Regular.Size24.CheckboxChecked())" />
                }
                else
                {
                    <FluentIcon Value="@(new Icons.Regular.Size24.CheckboxUnchecked())" />
                }
            </td>
        </tr>
        <tr>
            <td>Built in:</td>
            <td>
                @if (Content.IsBuiltIn)
                {
                    <FluentIcon Value="@(new Icons.Regular.Size24.CheckboxChecked())" />
                }
                else
                {
                    <FluentIcon Value="@(new Icons.Regular.Size24.CheckboxUnchecked())" />
                }
            </td>
        </tr>
        <tr>
            <td>Order</td>
            <td>
                @if (Content.IsEmbedded) 
            {
                <div>@Content.B1Order / @Content.B2Order</div>
            }
            else
            {
                <div>@Content.Order</div>
            }
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <table>
                    <tr>
                        <td><b>c</b></td>
                        <td><b>A</b></td>
                    </tr>
                    @for (var i = 0; i < Content.Steps; i++)
                    {
                        <tr>
                            <td>@Content.C[i]</td>
                            @for (var j = 0;j < Content.Steps;j++)
                            {
                                <td>@Content.A[i][j]</td>
                            }
                        </tr>
                    }
                    @if (Content.IsEmbedded)
                    {
                        <tr>
                            <td><b>b<sub>1</sub></b></td>
                            @for (var i = 0; i < Content.Steps; i++)
                            {
                                <td>@Content.B1[i]</td>
                            } 
                        </tr>
                        <tr>
                            <td><b>b<sub>2</sub></b></td>
                            @for (var i = 0; i < Content.Steps; i++)
                            {
                                <td>@Content.B2[i]</td>
                            } 
                        </tr>
                    }
                    else {
                        <tr>
                            <td><b>b</b></td>
                            @for (var i = 0; i < Content.Steps; i++)
                            {
                                <td>@Content.B[i]</td>
                            } 
                        </tr>
                    }
                </table>
            </td>
        </tr>
    </table>
</FluentDialogBody>