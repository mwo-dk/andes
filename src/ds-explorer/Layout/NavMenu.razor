    <nav class="sitenav" aria-labelledby="main-menu" onclick="document.getElementById('navmenu-toggle').click();">
        <FluentNavMenu Id="main-menu" Width="250" Collapsible="true" Title="Navigation menu" @bind-Expanded="expanded">
            <FluentNavLink Href="/" Match="NavLinkMatch.All" Icon="@(new Icons.Regular.Size20.Home())" IconColor="Color.Accent">Home</FluentNavLink>
            <FluentNavGroup Title="Cellular automata" Href="cellular-automata" Icon="@(new Icons.Regular.Size20.Box())" IconColor="Color.Accent">
                <FluentNavLink Href="game-of-life" Icon="@(new Icons.Regular.Size20.Info())" IconColor="Color.Accent">Game of Life</FluentNavLink>
                <FluentNavLink Href="langtons-ant" Icon="@(new Icons.Regular.Size20.Info())" IconColor="Color.Accent">Langton's ant</FluentNavLink>
            </FluentNavGroup>
            <FluentNavGroup Title="Dynamical systems" Href="dynamical-systems" Icon="@(new Icons.Regular.Size20.ArrowFlowUpRight())" IconColor="Color.Accent">
                <FluentNavLink Href="game-of-life" Icon="@(new Icons.Regular.Size20.Info())" IconColor="Color.Accent">Game of Life</FluentNavLink>
                <FluentNavLink Href="langtons-ant" Icon="@(new Icons.Regular.Size20.Info())" IconColor="Color.Accent">Langton's ant</FluentNavLink>
            </FluentNavGroup>
            <FluentNavGroup Title="Fractals" Href="fractals" Icon="@(new Icons.Regular.Size20.ArrowFlowUpRight())" IconColor="Color.Accent">
                <FluentNavLink Href="game-of-life" Icon="@(new Icons.Regular.Size20.Info())" IconColor="Color.Accent">Game of Life</FluentNavLink>
                <FluentNavLink Href="langtons-ant" Icon="@(new Icons.Regular.Size20.Info())" IconColor="Color.Accent">Langton's ant</FluentNavLink>
            </FluentNavGroup>
            <FluentNavGroup Title="Settings">
                <FluentNavLink Href="settings/ui" Icon="@(new Icons.Regular.Size20.Info())" IconColor="Color.Accent">UI</FluentNavLink>
                <FluentNavGroup Title="Numerics">
                    <FluentNavGroup Title="Ordinary differential equations">
                        <FluentNavGroup Title="Single step">
                            <FluentNavGroup Title="Runge Kutta">
                                <FluentNavLink Href="numerics/ode/single-step/runge-kutta/explicit" Icon="@(new Icons.Regular.Size20.Info())" IconColor="Color.Accent">Explicit</FluentNavLink>
                                <FluentNavLink Href="numerics/ode/single-step/runge-kutta/implicit" Disabled=true Icon="@(new Icons.Regular.Size20.Info())" IconColor="Color.Accent">Implicit</FluentNavLink>
                            </FluentNavGroup>
                        </FluentNavGroup>
                        <FluentNavGroup Title="Multi step" Disabled=true>
                            <FluentNavLink Href="mandelbrot" Icon="@(new Icons.Regular.Size20.Info())" IconColor="Color.Accent">Mandelbrot</FluentNavLink>
                            <FluentNavLink Href="julia" Icon="@(new Icons.Regular.Size20.Info())" IconColor="Color.Accent">Julia</FluentNavLink>
                        </FluentNavGroup>
                    </FluentNavGroup>
                </FluentNavGroup>
            </FluentNavGroup>
            <FluentNavGroup Title="Test">
                <FluentNavLink Href="test/numbers" Icon="@(new Icons.Regular.Size20.Info())" IconColor="Color.Accent">Numbers</FluentNavLink>
                <FluentNavLink Href="test/expressions" Icon="@(new Icons.Regular.Size20.Info())" IconColor="Color.Accent">Expressions</FluentNavLink>
            </FluentNavGroup>
            <FluentNavLink Href="about" Icon="@(new Icons.Regular.Size20.Info())" IconColor="Color.Accent">@CommonLocalizer![Common.ResourceStrings.About]</FluentNavLink>
        </FluentNavMenu>
    </nav>
