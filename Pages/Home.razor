@page "/"
@using System.Linq.Expressions

<PageTitle>Home</PageTitle>

<h1>Hello, world! </h1>

Welcome to your new Fluent Blazor app.

@{
    Expression<Func<double, double, double>> expr = (x, y) => System.Math.Cos(x) + System.Math.Sin(y);
    var f = expr.Compile();
}

<table style="padding: 2rem">
    <tr>
        <td>x</td>
        <td><input type="number" @bind="x" /></td>
    </tr>
    <tr>
        <td>y</td>
        <td><input type="number" @bind="y" /></td>
    </tr>
    <tr>
        <td>result</td>
        <td>@(result = f(x, y))</td>
    </tr>
</table>

@code {
    private double x = 1;
    private double y = 2;
    private double result;
}